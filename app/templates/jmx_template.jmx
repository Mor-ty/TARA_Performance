<?xml version="1.0" encoding="UTF-8"?>
<jmeterTestPlan version="1.2" properties="5.0" jmeter="5.6.3">
  <hashTree>

    <TestPlan guiclass="TestPlanGui" testclass="TestPlan" testname="${test_name}" enabled="true">
      <stringProp name="TestPlan.comments"></stringProp>
      <boolProp name="TestPlan.functional_mode">false</boolProp>
      <boolProp name="TestPlan.serialize_threadgroups">false</boolProp>

      <elementProp name="TestPlan.user_defined_variables" 
                   elementType="Arguments" guiclass="ArgumentsPanel" 
                   testclass="Arguments" testname="User Defined Variables" enabled="true">
        <collectionProp name="Arguments.arguments"/>
      </elementProp>

      <stringProp name="TestPlan.user_define_classpath"></stringProp>
    </TestPlan>

    <hashTree>

      <!-- CSV — LOGIN -->
      <CSVDataSet guiclass="TestBeanGUI" testclass="CSVDataSet" testname="CSV Data Set - logins" enabled="true">
        <stringProp name="filename">C:\\Users\\rahulde\\Documents\\performance_TARA\\data\\app\\generated\\testdata_login.csv</stringProp>
        <stringProp name="fileEncoding"></stringProp>
        <boolProp name="ignoreFirstLine">false</boolProp>
        <stringProp name="delimiter">,</stringProp>
        <boolProp name="quotedData">false</boolProp>
        <boolProp name="recycle">true</boolProp>
        <boolProp name="stopThread">false</boolProp>
        <stringProp name="variableNames">username,password,csrf_token</stringProp>
        <stringProp name="shareMode">shareMode.all</stringProp>
      </CSVDataSet>
      <hashTree/>

      <!-- CSV — PRODUCTS -->
      <CSVDataSet guiclass="TestBeanGUI" testclass="CSVDataSet" testname="CSV Data Set - products" enabled="true">
        <stringProp name="filename">C:\\Users\\rahulde\\Documents\\performance_TARA\\data\\app\\generated\\testdata_products.csv</stringProp>
        <stringProp name="fileEncoding"></stringProp>
        <boolProp name="ignoreFirstLine">false</boolProp>
        <stringProp name="delimiter">,</stringProp>
        <boolProp name="quotedData">false</boolProp>
        <boolProp name="recycle">true</boolProp>
        <boolProp name="stopThread">false</boolProp>
        <stringProp name="variableNames">product_id,category_id,search_keyword</stringProp>
        <stringProp name="shareMode">shareMode.all</stringProp>
      </CSVDataSet>
      <hashTree/>

      <!-- CSV — CHECKOUT -->
      <CSVDataSet guiclass="TestBeanGUI" testclass="CSVDataSet" testname="CSV Data Set - checkout" enabled="true">
        <stringProp name="filename">C:\\Users\\rahulde\\Documents\\performance_TARA\\data\\app\\generated\\testdata_checkout.csv</stringProp>
        <stringProp name="fileEncoding"></stringProp>
        <boolProp name="ignoreFirstLine">false</boolProp>
        <stringProp name="delimiter">,</stringProp>
        <boolProp name="quotedData">false</boolProp>
        <boolProp name="recycle">true</boolProp>
        <boolProp name="stopThread">false</boolProp>
        <stringProp name="variableNames">cart_id,item_id,quantity,first_name,last_name,postal_code,address,payment_id,promo</stringProp>
        <stringProp name="shareMode">shareMode.all</stringProp>
      </CSVDataSet>
      <hashTree/>

      <!-- THREAD GROUP -->
      <ThreadGroup guiclass="ThreadGroupGui" testclass="ThreadGroup" testname="User Load" enabled="true">
        <intProp name="ThreadGroup.num_threads">${users}</intProp>
        <intProp name="ThreadGroup.ramp_time">${ramp_up}</intProp>
        <longProp name="ThreadGroup.duration">${duration}</longProp>

        <boolProp name="ThreadGroup.same_user_on_next_iteration">true</boolProp>
        <boolProp name="ThreadGroup.scheduler">true</boolProp>
        <stringProp name="ThreadGroup.on_sample_error">continue</stringProp>

        <elementProp name="ThreadGroup.main_controller" elementType="LoopController" 
                     guiclass="LoopControlPanel" testclass="LoopController" 
                     testname="Loop Controller" enabled="true">
          <intProp name="LoopController.loops">-1</intProp>
          <boolProp name="LoopController.continue_forever">false</boolProp>
        </elementProp>
      </ThreadGroup>

      <!-- Samplers -->
      <hashTree>
        ${REQUEST_BLOCKS}
      </hashTree>

    </hashTree>
  </hashTree>
</jmeterTestPlan>
